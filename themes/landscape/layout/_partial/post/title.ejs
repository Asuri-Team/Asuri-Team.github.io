<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>
<% if (author && post.author) { %>
  <div class="article-author">
    <img src="<%- gravatar(post.author.email, 48) %>">
    <div class="article-author-info">
      <a href="<%- config.root %><%- 'author/' + post.authorId %>" class="article-author-name"><%- post.author.name %></a>
      <a href="<%- post.author.site %>" class="article-author-site" title="Visit the author's site">[site]</a>
      <div class="article-author-about" title="<%- post.author.about %>"><%- post.author.about %></div>
    </div>
  </div>
<% } %>
